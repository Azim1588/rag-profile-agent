# App Configuration
APP_NAME=rag-profile-agent
ENVIRONMENT=development
DEBUG=True
API_VERSION=v1

# FastAPI
HOST=0.0.0.0
PORT=8000
WORKERS=4

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=profile_agent
POSTGRES_USER=profile_user
POSTGRES_PASSWORD=secure_password_123
DATABASE_URL=postgresql+asyncpg://profile_user:secure_password_123@localhost:5432/profile_agent

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# OpenAI (REPLACE WITH YOUR KEY)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
MAX_TOKENS=4096
TEMPERATURE=0.7

# LangSmith (Optional - REPLACE WITH YOUR KEYS)
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=your-langsmith-key-here
LANGCHAIN_PROJECT=rag-profile-agent
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com

# AWS S3 (REPLACE WITH YOUR CREDENTIALS)
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
S3_BUCKET=profile-documents
S3_REGION=us-east-1

# Security
SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Vector Search
VECTOR_DIMENSION=1536
TOP_K_RESULTS=5
SIMILARITY_THRESHOLD=0.7

# Celery Schedule
DOCUMENT_SYNC_SCHEDULE=*/15 * * * *
